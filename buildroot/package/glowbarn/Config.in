config BR2_PACKAGE_GLOWBARN
	bool "glowbarn"
	depends on BR2_PACKAGE_PYTHON3
	select BR2_PACKAGE_PYTHON_FLASK
	select BR2_PACKAGE_PYTHON_PYYAML
	select BR2_PACKAGE_PYTHON_FLASK_CORS
	help
	  GlowBarn - Paranormal Research Operating System Core

	  A comprehensive paranormal investigation platform with:
	  - Real-time sensor monitoring (EMF, temperature, humidity, etc.)
	  - EVP (Electronic Voice Phenomena) detection
	  - Night vision camera with motion detection
	  - Web-based dashboard interface
	  - Data logging and export

	  https://github.com/bad-antics/glowbarn-os

if BR2_PACKAGE_GLOWBARN

config BR2_PACKAGE_GLOWBARN_WEB
	bool "Enable web dashboard"
	default y
	help
	  Enable the web-based control dashboard
	  accessible at http://device-ip:8765

config BR2_PACKAGE_GLOWBARN_AUDIO
	bool "Enable audio/EVP detection"
	default y
	select BR2_PACKAGE_ALSA_LIB
	select BR2_PACKAGE_PORTAUDIO
	help
	  Enable audio capture for EVP detection and
	  ultrasonic/infrasonic analysis.

config BR2_PACKAGE_GLOWBARN_CAMERA
	bool "Enable camera support"
	default y
	select BR2_PACKAGE_LIBCAMERA
	select BR2_PACKAGE_V4L_UTILS
	help
	  Enable camera support for visual investigation
	  and motion detection.

config BR2_PACKAGE_GLOWBARN_GPIO
	bool "Enable GPIO sensors"
	default y
	select BR2_PACKAGE_LIBGPIOD
	help
	  Enable GPIO-based sensors
	  (motion, temperature, humidity, etc.)

config BR2_PACKAGE_GLOWBARN_I2C
	bool "Enable I2C sensors"
	default y
	select BR2_PACKAGE_I2C_TOOLS
	help
	  Enable I2C-based sensors
	  (pressure, accelerometer, etc.)

config BR2_PACKAGE_GLOWBARN_SERIAL
	bool "Enable serial sensors"
	default y
	select BR2_PACKAGE_LIBSERIALPORT
	help
	  Enable support for serial/USB sensors
	  (EMF meters, Geiger counters, etc.)

endif
