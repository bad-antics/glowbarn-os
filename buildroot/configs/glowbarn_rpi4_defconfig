# GlowBarn OS for Raspberry Pi 4
# Paranormal Research Operating System
# Based on Buildroot 2024.02.x

# Architecture
BR2_aarch64=y

# Raspberry Pi 4 target
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_6=y
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_1=n

# System
BR2_TARGET_GENERIC_HOSTNAME="glowbarn"
BR2_TARGET_GENERIC_ISSUE="Welcome to GlowBarn OS - Paranormal Research Operating System"
BR2_SYSTEM_DHCP="eth0"
BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_TARGET_GENERIC_GETTY_BAUDRATE_115200=y
BR2_TARGET_GENERIC_ROOT_PASSWD="glowbarn"

# Kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_TARBALL=y
BR2_LINUX_KERNEL_CUSTOM_TARBALL_LOCATION="https://github.com/raspberrypi/linux/archive/rpi-6.6.y.tar.gz"
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="$(BR2_EXTERNAL_GLOWBARN_PATH)/board/glowbarn/rpi4_kernel.config"
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="broadcom/bcm2711-rpi-4-b"
BR2_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y

# Bootloader
BR2_TARGET_UBOOT=n
BR2_PACKAGE_RPI_FIRMWARE=y
BR2_PACKAGE_RPI_FIRMWARE_VARIANT_PI4=y

# Filesystem
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_EXT2_SIZE="2G"
BR2_TARGET_ROOTFS_EXT2_MKFS_OPTIONS="-O ^metadata_csum,^64bit"
BR2_ROOTFS_OVERLAY="$(BR2_EXTERNAL_GLOWBARN_PATH)/overlay"
BR2_ROOTFS_POST_BUILD_SCRIPT="$(BR2_EXTERNAL_GLOWBARN_PATH)/board/glowbarn/post-build.sh"
BR2_ROOTFS_POST_IMAGE_SCRIPT="$(BR2_EXTERNAL_GLOWBARN_PATH)/board/glowbarn/post-image.sh"

# Custom scripts location
BR2_ROOTFS_POST_SCRIPT_ARGS="$(BR2_EXTERNAL_GLOWBARN_PATH)"

# genimage for SD card image
BR2_PACKAGE_HOST_GENIMAGE=y
BR2_PACKAGE_HOST_DOSFSTOOLS=y
BR2_PACKAGE_HOST_MTOOLS=y

# Init system
BR2_INIT_SYSTEMD=y
BR2_ROOTFS_DEVICE_CREATION_DYNAMIC_EUDEV=n

# Toolchain
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y
BR2_TOOLCHAIN_BUILDROOT_CXX=y
BR2_ENABLE_LOCALE_PURGE=y

# Core packages
BR2_PACKAGE_BUSYBOX=y
BR2_PACKAGE_DROPBEAR=y
BR2_PACKAGE_DROPBEAR_CLIENT=y
BR2_PACKAGE_HTOP=y
BR2_PACKAGE_NANO=y
BR2_PACKAGE_BASH=y

# Networking
BR2_PACKAGE_DHCPCD=y
BR2_PACKAGE_DHCPCD_DUID_DISABLE=y
BR2_PACKAGE_WPASUPP=y
BR2_PACKAGE_WPASUPP_NL80211=y
BR2_PACKAGE_WPASUPP_WPA3=y
BR2_PACKAGE_IW=y
BR2_PACKAGE_WIRELESS_TOOLS=y
BR2_PACKAGE_HOSTAPD=y
BR2_PACKAGE_AVAHI=y
BR2_PACKAGE_AVAHI_DAEMON=y
BR2_PACKAGE_IPTABLES=y
BR2_PACKAGE_NFTABLES=y

# Python for GlowBarn app
BR2_PACKAGE_PYTHON3=y
BR2_PACKAGE_PYTHON3_2TO3=n
BR2_PACKAGE_PYTHON_PIP=y
BR2_PACKAGE_PYTHON_FLASK=y
BR2_PACKAGE_PYTHON_NUMPY=y
BR2_PACKAGE_PYTHON_PILLOW=y
BR2_PACKAGE_PYTHON_REQUESTS=y
BR2_PACKAGE_PYTHON_PYSERIAL=y
BR2_PACKAGE_PYTHON_FLASK_CORS=y

# GPIO and hardware access
BR2_PACKAGE_LIBGPIOD=y
BR2_PACKAGE_LIBGPIOD_TOOLS=y
BR2_PACKAGE_I2C_TOOLS=y
BR2_PACKAGE_SPI_TOOLS=y
BR2_PACKAGE_LIBSERIALPORT=y

# Audio for EVP detection
BR2_PACKAGE_ALSA_UTILS=y
BR2_PACKAGE_ALSA_LIB=y
BR2_PACKAGE_PULSEAUDIO=y
BR2_PACKAGE_PORTAUDIO=y

# Video/Camera
BR2_PACKAGE_LIBCAMERA=y
BR2_PACKAGE_LIBCAMERA_V4L2=y
BR2_PACKAGE_V4L_UTILS=y
BR2_PACKAGE_MJPG_STREAMER=y

# Display/GUI (headless option available)
BR2_PACKAGE_MESA3D=y
BR2_PACKAGE_MESA3D_GALLIUM_DRIVER_V3D=y
BR2_PACKAGE_MESA3D_GALLIUM_DRIVER_VC4=y
BR2_PACKAGE_MESA3D_OPENGL_ES=y
BR2_PACKAGE_WESTON=y
BR2_PACKAGE_WESTON_DRM=y
BR2_PACKAGE_CAGE=y

# Web server
BR2_PACKAGE_LIGHTTPD=y
BR2_PACKAGE_NGINX=n

# Database for logging
BR2_PACKAGE_SQLITE=y

# USB support
BR2_PACKAGE_EUDEV=y
BR2_PACKAGE_LIBUSB=y
BR2_PACKAGE_USBUTILS=y

# Thermal and environmental sensors
BR2_PACKAGE_LM_SENSORS=y

# Compression tools
BR2_PACKAGE_ZIP=y
BR2_PACKAGE_UNZIP=y
BR2_PACKAGE_XZ=y

# Development (optional, can be removed for production)
BR2_PACKAGE_GDB=y
BR2_PACKAGE_STRACE=y

# GlowBarn custom packages
BR2_PACKAGE_GLOWBARN=y
BR2_PACKAGE_GLOWBARN_SENSORS=y

# Timezone
BR2_TARGET_TZ_INFO=y
BR2_TARGET_LOCALTIME="America/New_York"

# Logo and branding
BR2_TARGET_GENERIC_ROOT_PASSWD="paranormal"
BR2_SYSTEM_BIN_SH_BASH=y
